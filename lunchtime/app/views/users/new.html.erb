<div class="text-center">
  <h1>Sign up</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@user) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      
      <div class="form-group">
        <%= f.label :sex, 'Sex' %>
        <%= f.select :sex, [["男","男"],["女","女"]], class: 'form-control' %>
      </div>
  
      <div class="form-group">
        <%= f.label :department, 'Department' %>
        <%= f.select :department, [["電気電子生命学科","電気電子生命学科"],["機械工学科","機械工学科"],["機械情報学科","機械情報学科"],["建築学科","建築学科"],["応用化学科","応用化学科"],["情報科学科","情報科学科"],["物理学科","物理学科"],["数学科","数学科"],["農学部","農学部"]], class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'Confirmation' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :grade, 'Grade' %>
        <%= f.number_field :grade, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :introduce, 'Introduce' %>
        <%= f.text_area :introduce, class: 'form-control' %>
      </div>

      <%= f.submit 'Sign up', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>